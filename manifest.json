{
	"manifest_version": 2,
	"name": "GiveawayAutoEnterer-IndieGala",
	"author": "Maciej Sawicki",
	"icons": {
		"16": "./icons/16x16.png",
		"48": "./icons/48x48.png",
		"128": "./icons/128x128.png"
	},
	"version": "1.0.0",
	"permissions": [
		"notifications",
		"storage",
		"tabs",
		"https://www.indiegala.com/*"
	],
	"content_scripts": [
		{
			"matches": [
				"https://www.indiegala.com/giveaways/*"
			],
			"run_at": "document_end",
			"css": [
				"styles.css"
			],
			"js": [
				"jquery.min.js",
				"Rx.min.js",
				"index.js"
			]
		}
	],
	"description": "A page extension that automates entering giveaways on indiegala.com",
	"background": {
		"scripts": [
			"hot-reload.js"
		]
	},
	"browser_action": {
		"default_title": "IndieGala Giveaway AutoEnterer"
	}
}